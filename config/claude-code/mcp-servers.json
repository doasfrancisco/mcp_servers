{
  "mcpServers": {
    "resend": {
      "command": "node",
      "args": ["{{MCP_SERVERS_PATH}}/servers/resend/build/index.js"],
      "env": {
        "RESEND_API_KEY": "{{RESEND_API_KEY}}",
        "SENDER_EMAIL_ADDRESS": "{{RESEND_SENDER_EMAIL}}",
        "REPLY_TO_EMAIL_ADDRESS": "{{RESEND_REPLY_TO_EMAIL}}"
      }
    },
    "nia": {
      "command": "node",
      "args": ["{{MCP_SERVERS_PATH}}/servers/nia/index.js"],
      "env": {
        "NIA_API_KEY": "{{NIA_API_KEY}}",
        "NIA_API_URL": "https://apigcp.trynia.ai/"
      },
      "disabled": false
    },
    "google-drive": {
      "type": "http",
      "url": "{{GOOGLE_DRIVE_URL}}",
      "headers": {
        "x-api-key": "{{GOOGLE_DRIVE_KEY}}"
      }
    },
    "whatsapp": {
      "type": "http",
      "url": "{{WHATSAPP_URL}}",
      "headers": {
        "Authorization": "Bearer {{WHATSAPP_KEY}}"
      }
    },
    "supermemory": {
      "command": "node",
      "args": ["{{MCP_SERVERS_PATH}}/servers/supermemory/run.js"],
      "env": {
        "SUPERMEMORY_API_KEY": "{{SUPERMEMORY_API_KEY}}"
      }
    },
    "catafract": {
      "type": "http",
      "url": "{{CATAFRACT_URL}}",
      "headers": {
        "Authorization": "Bearer {{CATAFRACT_API_KEY}}"
      }
    },
    "figma": {
      "type": "http",
      "url": "{{FIGMA_URL}}"
    },
    "notion": {
      "type": "http",
      "url": "{{NOTION_URL}}",
      "headers": {
        "x-api-key": "{{NOTION_KEY}}"
      }
    },
    "todoist": {
      "type": "http",
      "url": "{{TODOIST_URL}}"
    }
  }
}