{
  "mcpServers": {
    "resend": {
      "command": "node",
      "args": ["{{MCP_SERVERS_PATH}}/servers/resend/build/index.js"],
      "env": {
        "RESEND_API_KEY": "{{RESEND_API_KEY}}",
        "SENDER_EMAIL_ADDRESS": "{{RESEND_SENDER_EMAIL}}",
        "REPLY_TO_EMAIL_ADDRESS": "{{RESEND_REPLY_TO_EMAIL}}"
      }
    },
    "nia": {
      "type": "http",
      "url": "{{NIA_API_URL}}mcp",
      "headers": {
        "Authorization": "Bearer {{NIA_API_KEY}}"
      }
    },
    "google-drive": {
      "type": "http",
      "url": "{{GOOGLE_DRIVE_URL}}",
      "headers": {
        "x-api-key": "{{GOOGLE_DRIVE_KEY}}"
      }
    },
    "whatsapp": {
      "type": "http",
      "url": "{{WHATSAPP_URL}}",
      "headers": {
        "Authorization": "Bearer {{WHATSAPP_KEY}}"
      }
    },
    "supermemory": {
      "command": "node",
      "args": ["{{MCP_SERVERS_PATH}}/servers/supermemory/run.js"],
      "env": {
        "SUPERMEMORY_API_KEY": "{{SUPERMEMORY_API_KEY}}"
      }
    },
    "crosspost": {
      "command": "node",
      "args": [
        "{{MCP_SERVERS_PATH}}/servers/crosspost/run.js",
        "-t"
      ],
      "env": {
        "TWITTER_ACCESS_TOKEN_KEY": "{{TWITTER_ACCESS_TOKEN_KEY}}",
        "TWITTER_ACCESS_TOKEN_SECRET": "{{TWITTER_ACCESS_TOKEN_SECRET}}",
        "TWITTER_API_CONSUMER_KEY": "{{TWITTER_API_CONSUMER_KEY}}",
        "TWITTER_API_CONSUMER_SECRET": "{{TWITTER_API_CONSUMER_SECRET}}"
      }
    }
  }
}